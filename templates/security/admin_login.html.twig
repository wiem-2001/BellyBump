{% extends 'baseBackOffice.html.twig' %}
 {% block stylesheets %}
 {{parent()}}
            <!--     Fonts and icons     -->
            <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
            <!-- Nucleo Icons --> 
            <link href="{{asset('backOffice/assets/css/nucleo-icons.css')}}" rel="stylesheet" />
            <link href="{{asset('backOffice/assets/css/nucleo-svg.css')}}" rel="stylesheet" />
            <!-- Font Awesome Icons -->
            <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
            <!-- Material Icons -->
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
            <!-- CSS Files -->
            <link id="pagestyle" href="{{asset('backOffice/assets/css/material-dashboard.css?v=3.1.0')}}" rel="stylesheet" />
        {% endblock %}
{% block sidenav %} {% endblock %}

 {% block body %}
      <main class="main-content border-radius-lg ">
    <div class="page-header align-items-start min-vh-100" style="background-image:  url('{{ asset('frontOffice/assets/img/hero-bg.webp') }}');">
      <span class="mask bg-gradient-dark opacity-6"></span>
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                  <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Sign in <br>To BellyBump</h4>
                </div>
              </div>
              <div class="card-body">
                <form method="post" action="{{ path('admin_login') }}" novalidate>
                         {% if error %}
                            {% if app.request.get('_username') == '' or app.request.get('_password') == '' %}
                                <div class="alert alert-light">Please fill in all fields</div>
                            {% else %}
                                <div class="alert alert-light">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        {% endif %}
    <div class="input-group input-group-outline my-3">
        <input type="email" class="form-control" name="_username" autocomplete="email" placeholder="Email" required autofocus >
    </div>
    <div class="input-group input-group-outline mb-3">
        <input type="password" class="form-control" name="_password" autocomplete="current-password" placeholder="Password" required>
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <div class="text-center">
        <button class="btn bg-gradient-primary w-100 my-4 mb-2" type="submit">Sign in</button>
    </div>
</form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
       </main>
        {% endblock %}