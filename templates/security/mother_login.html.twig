{% extends 'base.html.twig' %}

{% block header %}
{% endblock %}
{% block body %}

    <!-- Hero Section - Home Page -->
    <section id="hero" class="hero">
        <img src="frontOffice/assets/img/hero-bg.webp" alt="">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <h2>Embrace Motherhood: Welcome to BellyBump</h2>
                    <p>Where Motherhood's Challenges Transform into Triumphs</p>
                </div>
                <div class="col-lg-6">
                    <form method="post" action="{{ path('app_login') }}" novalidate>
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger" id="error-message">
                                {{ message }}
                            </div>
                        {% endfor %}
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" placeholder="enter your email" required autofocus>
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" placeholder="enter your password" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="mt-3"> <button class="btn btn-lg btn-primary float-end is-invalid" type="submit" style="background-color: #AB3319;">Sign in</button></div>
                        Forgot Password?
                        <a href='{{path('app_forgot_password_request')}}' class="text-red" style="text-decoration: none;">reset password</a>
                        <a href="{{ path('app_register') }}" class="btn btn-lg btn-secondary float-end" style="margin-right: 10px;">Sign up</a>

                    </form>
                    <div class="mt-3">
                    </div>

                </div>
            </div>
        </div>
    </section><!-- End Hero Section -->

    <script>
        // Automatically hide the error message after 5 seconds
        setTimeout(function() {
            var errorMessage = document.getElementById('error-message');
            if (errorMessage) {
                errorMessage.style.display = 'none';
            }
        }, 5000); // Adjust duration as needed (5000 milliseconds = 5 seconds)
    </script>

{% endblock %}
