{% extends 'baseBackOffice.html.twig' %}


{% block main %}*
<style>
    #myChart {
        width: 700px !important; /* Modifier la largeur */
        height: 700px !important; /* Modifier la hauteur */
    }
</style>


    <h1>Products Statistics</h1>
    <canvas id="myChart" width="200" height="200"></canvas> {# Définir une taille plus petite ici #}

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie', // Changement du type de graphique à "pie" pour un diagramme circulaire
            data: {
                labels: {{ labels|json_encode|raw }}, // Les étiquettes
                datasets: [{
                    label: 'Nombre de Produits par Gamme de Prix',
                    data: {{ data|json_encode|raw }}, // Les données
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
