{% extends 'base.html.twig' %}

{% block title %}Hello PartnerController!{% endblock %}


{% block stylesheets %}
{{ parent() }} {# Include parent stylesheets from the base template #}
    <link href="{{ asset('frontOffice/assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('frontOffice/assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('frontOffice/assets/vendor/glightbox/css/glightbox.min.css') }}" rel="stylesheet">
    <link href="{{ asset('frontOffice/assets/vendor/swiper/swiper-bundle.min.css') }}" rel="stylesheet">
    <link href="{{ asset('frontOffice/assets/vendor/aos/aos.css') }}" rel="stylesheet">
    <link href="{{ asset('frontOffice/assets/css/main.css') }}" rel="stylesheet">
    {{ parent() }}
    {% endblock %}


   
   {% block body %}
       <!-- Portfolio Section - Home Page -->
       <section id="portfolio" class="portfolio">
           <section id="portfolio" class="portfolio">
               <!-- Section Title -->
               <div class="container section-title" data-aos="fade-up">
                   <h2>Shop</h2>
                   <p>Available products for now</p>
               </div>
               <!-- End Section Title -->
               <div class="search-container">
                   <form action="{{ path('shop_search') }}" method="GET"  class="form-control mr-sm-2">
                       <input type="text" placeholder="search a product..." name="query">
                       <button type="submit" class="btn btn-outline-success my-2 my-sm-0 ">search</button>
                   </form>
               </div>

               <div class="container">
                   <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">
                       <!-- Portfolio Container -->
           <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
               {% for product in pr %}
                   <div class="col-lg-4 col-md-6 portfolio-item isotope-item">
                       {% if product.image %}
                           <img src="{{ vich_uploader_asset(product, 'imageFile') }}" class="img-fluid" alt="{{ product.nom }}">
                       {% endif %}
                       <div class="portfolio-info">
                           <h4>{{ product.nom }}</h4>
                           <p>{{ product.description }}</p>
                           <p>{{ product.prix }} â‚¬</p>
                           <p>Brand: {{ product.partenaire.marque }}</p>
                           <!-- Bouton Ajouter au panier -->
                           <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                       </div>
                   </div>
               {% endfor %}

           </div>
           ...
       </section>
   {% endblock %}

