{% extends 'base.html.twig' %}

{% block title %}Hello CarteController!{% endblock %}

{% block west %}
    <style>
        .welcome-image img {
            width: 100%;
            height: auto;
        }
        .welcome-message {
            text-align: center;
            margin: 20px 0;
        }
    </style>



    <div class="welcome-image">
        <img src="{{ asset('frontoffice/assets/img/panier.png') }}" alt="Image de bienvenue" style="width: 100%; height: auto;">
    </div>
    <div class="welcome-message">
        <h2>Thank you for trusting us!</h2>
        <p> We are happy to support you at every step !</p>
    </div>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1>Your cart</h1>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <th> Image </th>
            <th> Product </th>
            <th> Description </th>
            <th> Price </th>
            <th> Quantity </th>
            <th> Total </th>
            <th> Action </th>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        <img src="{{ vich_uploader_asset(item.product, 'imageFile') }}" class="img-fluid" alt="{{ item.product.nom }}" style="width: 100px; height: auto;" >

                    </td>
                    <td> {{ item.product.nom }} </td>
                    <td> {{ item.product.description }} </td>
                    <td> {{ item.product.prix }} € </td>
                    <td> <button class="btn btn-sm btn-outline-secondary decrease" data-id="{{ item.product.id }}">-</button>
                        {{ item.quantity }}
                        <button class="btn btn-sm btn-outline-secondary increase" data-id="{{ item.product.id }}">+</button></td>
                    <td> {{ item.product.prix * item.quantity }} € </td>

                    <td>
                        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

                        <a href="{{ path('cart_remove', {'id': item.product.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5" class="text-right">Total: </td>
                <td> {{ total }} € </td>
                <td> </td>
            </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
{% endblock %}

{% block panier %}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const increaseButtons = document.querySelectorAll('.increase');
        const decreaseButtons = document.querySelectorAll('.decrease');

        increaseButtons.forEach(button => {
            button.addEventListener('click', function () {
                const id = this.getAttribute('data-id');
                updateQuantity(id, 1); // Augmenter la quantité
            });
        });

        decreaseButtons.forEach(button => {
            button.addEventListener('click', function () {
                const id = this.getAttribute('data-id');
                updateQuantity(id, -1); // Diminuer la quantité
            });
        });

        function updateQuantity(productId, change) {
            fetch(`/panier/update/${productId}/${change}`, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload(); // Recharger la page pour voir les modifications
                    } else {
                        alert('Impossible de mettre à jour la quantité');
                    }
                });
        }
    });


</script>
{% endblock %}

