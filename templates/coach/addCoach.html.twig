{% extends 'baseBackOffice.html.twig' %}
{% block title %}Add Coach {% endblock %}

{% block body %}
   <main class="main-content border-radius-lg ">
    <div class="container-fluid py-4 ">

{% block main %}
    <h3 class="event-title">Add New Coach</h3> <hr class="title-hr">
    <div class="addCoachMain">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }} {# Render all form-level errors #}

        <div class="row">
            <div class="col-md-12">
                <div class="event-label">{{ form_label(form.firstname) }}</div>
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Enter coach\'s first name'}} )}}
                <div class="text-danger">{{ form_errors(form.firstname) }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="event-label">{{ form_label(form.lastname) }}</div>
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Enter coach\'s last name'}} )}}
                <div class="text-danger">{{ form_errors(form.lastname) }}</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="event-label">{{ form_label(form.email) }}</div>
                {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Enter coach\'s email'}} )}}
                <div class="text-danger">{{ form_errors(form.email) }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="event-label">{{ form_label(form.job) }}</div>
                {{ form_widget(form.job, {'attr': {'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Enter coach\'s job'}} )}}
                <div class="text-danger">{{ form_errors(form.job) }}</div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="event-label">{{ form_label(form.phone) }}</div>
                {{ form_widget(form.phone, {'attr': {'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Enter coach\'s phone number'}} )}}
                <div class="text-danger">{{ form_errors(form.phone) }}</div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary addbtn">Add</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
