{% extends 'backbase.html.twig' %}

{% block title %}Hello CommentController!{% endblock %}

{% block body %}
    <div style="text-align: center;">
        <br>
        <br>
        <div class="page-title">
            <h1>Liste des Commentaires</h1>
        </div>
        <br>
        <div class="example-wrapper">
            <a href="{{ path('display_commentback') }}" class="btn btn-primary mb-3">Voir les commentaires</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Contenu</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% if comments is not empty %}
                    {% for comment in comments %}

                        {% if comment.post.id == postId %}
                            <div class="post">

                                <div class="post-content">
                                    <p>{{ comment.contenu }}</p>

                                </div>
                                <div class="post-actions">
                                    <a href="{{ path('deletecomment', {'id': comment.id}) }}" class="edit-post-button">Supprimer
                                    </a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    <p>Aucun Commentaire trouvé.</p>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Styles pour le titre */
        .page-title {
            margin-top: 20px;
        }

        /* Styles pour le conteneur principal du tableau */
        .example-wrapper {
            width: 100%; /* Ajustez la largeur comme vous le souhaitez */
            background-color: rgba(255, 204, 203, 0.5); /* Couleur semi-transparente liée à la maternité */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); /* Effet d'ombre */
            margin-left: 170px; /* Ajoutez une marge à gauche pour décaler le tableau */
        }

        /* Styles pour le tableau */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            overflow-wrap: break-word; /* Empêcher le retour à la ligne automatique */
        }

        th {
            background-color: #ff6666; /* Couleur de fond pour l'en-tête de tableau */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Couleur de fond pour les lignes paires */
        }

        /* Styles pour le bouton */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff6666; /* Couleur du bouton */
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #ff4d4d; /* Couleur du bouton au survol */
        }
    </style>
{% endblock %}
