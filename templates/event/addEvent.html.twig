{% extends 'baseBackOffice.html.twig' %}
{% block title %}Add Event {% endblock %}
{% block body %}
   <main class="main-content border-radius-lg ">
    <div class="container-fluid py-4">

{% block main %}
    <h3 class="event-title">Add New Event</h3> <hr class="title-hr">
     {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
     {{ form_errors(form) }} {# Render all form-level errors #}
    <div class="row">
        <div class="col-md-12">
            <div class="event-label">{{ form_label(form.name) }}</div> 
            {{ form_widget(form.name, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Enter Event\'s name'} } )}}
            <div class="text-danger">{{ form_errors(form.name) }}</div>
            
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="event-label">{{ form_label(form.description) }}</div> 
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Describe your event'} } )}}
            <div class="text-danger">{{ form_errors(form.description) }}</div>
            
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="event-label">{{ form_label(form.image) }}</div> 
            {{ form_widget(form.image, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''),
            'accept': 'image/png, image/jpeg, image/jpg'} } )}}

            <div class="text-danger">{{ form_errors(form.image) }}</div>
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="event-label">{{ form_label(form.coach) }}</div> 
            {{ form_widget(form.coach, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : '')} } )}}
            <div class="text-danger">{{ form_errors(form.coach) }}</div>
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="event-label">{{ form_label(form.MeetingCode) }}</div> 
            {{ form_widget(form.MeetingCode, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : ''), 'placeholder': 'Set Meet code'} } )}}
            <div class="text-danger">{{ form_errors(form.MeetingCode) }}</div>
            
        </div>
    </div>
    
    
        <div class="col-md-12">
            <div class="event-label">{{ form_label(form.day) }}</div>
            {{ form_widget(form.day, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : '')} } )}}
            <div class="text-danger">{{ form_errors(form.day) }}</div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="event-label">{{ form_label(form.heureDebut) }}</div> 
                {{ form_widget(form.heureDebut, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : '')} } )}}
                <div class="text-danger">{{ form_errors(form.heureDebut) }}</div>
            </div>
            <div class="col-md-6">   
                <div class="event-label">{{ form_label(form.heureFin) }}</div> 
                {{ form_widget(form.heureFin, { 'attr': { 'class': 'form-control' ~ (not form.vars.valid ? ' is-invalid' : '')} } )}}
                <div class="text-danger">{{ form_errors(form.heureFin) }}</div>
            </div> 
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    {{ form_end(form) }}
    
{% endblock %}
