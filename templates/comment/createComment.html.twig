
{% block body %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <style>
        /* Styles pour le formulaire */
        .form-container {
            width: 300px; /* Largeur fixe */
            height: 300px; /* Hauteur fixe */
            margin: 0 auto;
            padding: 20px;
            background-color: rgba(255, 204, 203, 0.5);
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
        }

        .form-input {
            width: 100%;
            height: 150px; /* Ajustez la hauteur selon vos besoins */
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .form-button {
            width: auto; /* Largeur automatique */
            background-color: #ff6666;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-button:hover {
            background-color: #45a049;
        }
    </style>

    <div class="form-container">
        {{ form_start(f) }}
            {{ form_row(f.contenu, {'attr': {'class': 'form-input'}}) }}
            {{ form_row(f.ajouter, {'attr': {'class': 'form-button'}}) }}
        {{ form_end(f) }}
    </div>
{% endblock %}