{% extends 'backbase.html.twig' %}

{% block title %}Hello CommentController!{% endblock %}

{% block body %}
    <div style="text-align: center;">
        <br>
        <br>
        <div class="page-title">
            <h1>Liste des Commentaires</h1>
        </div>
        <br>
        <div class="example-wrapper">
            <a href="{{ path('display_commentback') }}" class="btn btn-primary mb-3">Voir les commentaires</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Contenu</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>

                        <td>{{ comment.contenu }}</td>

                        <td>
                            <form action="{{ path('deletecommentback', {'id': comment.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <style>
        /* Styles pour centrer le contenu */
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        /* Styles pour le titre */
        .page-title {
            margin-top: 20px;
        }

        /* Styles pour le conteneur principal du tableau */
        .example-wrapper {
            width: 100%; /* Ajustez la largeur comme vous le souhaitez */
            background-color: rgba(255, 204, 203, 0.5); /* Couleur semi-transparente liée à la maternité */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1); /* Effet d'ombre */
            margin-left: 170px; /* Ajoutez une marge à gauche pour décaler le tableau */
        }

        /* Styles pour le tableau */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #ff6666; /* Couleur de fond pour l'en-tête de tableau */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Couleur de fond pour les lignes paires */
        }

        /* Styles pour le bouton */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #ff6666; /* Couleur du bouton */
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #ff4d4d; /* Couleur du bouton au survol */
        }
    </style>
{% endblock %}
